<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/c2_dark</item>
        <item name="colorPrimaryDark">@color/c1_darkest</item>
        <item name="colorAccent">@color/c3_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="app_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/progress_icon</item>
    </style>

    <style name="main_text">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/c4_lightest</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="paddined_view">
        <item name="android:paddingLeft">@dimen/standard_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/standard_horizontal_margin</item>
    </style>

    <style name="widget_text_style">
        <item name="android:textColor">@color/c4_lightest</item>
        <item name="android:shadowColor">@color/c0_black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

</resources>
